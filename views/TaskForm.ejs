<!-- views/profile.ejs -->
<!doctype html>
<html>
        <head>
                <title>Nick's List</title>
                <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
                <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
                <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
                <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
                <link href="https://fonts.googleapis.com/css?family=Permanent+Marker|Poppins:200,400,700,900" rel="stylesheet">    
                <style>
            
                </style>
            </head>
<body style="background-color: #EAF6F6;">
<%include header%>
<div class="container">

    <div class="page-header text-center">
        <h1 style="color: #F76B8A; font-family: 'Permanent Marker', cursive; font-size: 36pt;">Create New Task</h1>
    </div>

    <div class="row">

        <!-- LIST -->
        <div class="col-sm-6 col-sm-offset-3">
            <div class="well" style="color: white; margin: 50px; border-radius: 10px; background-color: #66BFBF; font-family: 'Poppins', sans-serif;">
                    <form name="taskForm" action="/task" method="post">
                    Task Name: <input type="text" name="name" id="name" style='margin-bottom: 20px; width: 100%; color: gray'>
                    <br>
                    Task Description: <textarea name="description" id="description" style='margin-bottom: 20px; width: 100%; color: gray'></textarea> 
                    <br>
                    Completion Date: <input id="completeBy" type="date" name="completeBy" style='margin-bottom: 20px; color: gray'>
                    <br>
                    Task Master:
                    <select name="taskMaster" id="taskMaster" style='margin-bottom: 20px; width: 100%; color: gray'>
                        <% for (i=0;i<users.length;i++){%>
                            <option value="<%= users[i]['_id'] %>"><%= users[i]['local']['email'] %></option>
                        <%}%>
                    </select>
                    <br>
                    <input type="submit" value="Submit that shit, yo!" style='color: white; background-color: #F76B8A; margin-top: 20px; border-color:#F76B8A'>
                    </form>
            </div>
        </div>

    </div>

</div>
</body>
</html>
