<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Nick's List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Your To-dos</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LIST -->
        <div class="col-sm-6">
            <div class="well">
                    <form name="taskForm" action="/task" method="post">
                    TASK NAME: <input type="text" name="name" id="name"><br>
                    TASK DESCRIPTION: <textarea name="description" id="description"></textarea> 
                    <br>
                    COMPLETE BY DATE: <input id="completeBy" type="date" name="completeBy"><Br>
                    TASK MASTER:
                    <select name="taskMaster" id="taskMaster">
                        <% for (i=0;i<users.length;i++){%>
                            <option value="<%= users[i]['_id'] %>"><%= users[i]['local']['email'] %></option>
                        <%}%>
                    </select>
                    <br>
                    <input type="submit" value="Submit that shit, yo!">
                    </form>
            </div>
        </div>

    </div>

</div>
</body>
</html>
