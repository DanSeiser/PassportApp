<!doctype html>
<html>
<head>
    <title>Nick's List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Your To-dos</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LIST -->
        <div class="col-sm-6">
            <div class="well">
                <% if(tasks.length === 0) {%>
                    You have no tasks, bitch
                <% } %>
                <ul>
               <!--LOOPS OVER THE TASK ARRAY BEING PASSED IN-->
               <% for (i=0;i<tasks.length;i++){%>
                    <li>NAME : <%= tasks[i]['name'] %></li>
                <%}%>
                </ul>
                
                <div class="row">
                    <div class="col-sm-6">
                        <button onclick="document.location.href='/taskform'">Click here to add a new task</button>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
</body>
</html>
